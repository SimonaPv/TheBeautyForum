@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<!-- Favicon -->
<link href="img/favicon.ico" rel="icon">

<!-- Google Web Fonts -->
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

<!-- Libraries Stylesheet -->
<link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
<link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

<!-- Customized Bootstrap Stylesheet -->
<link href="css/styles.css" rel="stylesheet">

<link rel="stylesheet" href="~/css/style.css">

<div class="wrapper">
    <div class="inner">
        <div class="image-holder" style="padding-top: 4em;">
            <img src="~/images/registration-form-4.jpg" alt="">
        </div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h3>Sign Up</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-holder">
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                <input asp-for="Input.FirstName" class="form-control" placeholder="first name" autocomplete="on" aria-required="true" />
            </div>
            <div class="form-holder">
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                <input asp-for="Input.LastName" class="form-control" placeholder="last name" autocomplete="on" aria-required="true" />
            </div>
            <div class="form-holder" style="padding-left: 1.7em;">
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                <input type="file" asp-for="Input.ProfilePicture" class="form-control" accept="image/gif, image/jpeg, image/png" aria-required="true" style="padding-top: 1.09em; text-transform:uppercase; " />
            </div>
            <div class="form-group">
                <img alt="Uploaded Image" accept="image/gif, image/jpeg, image/png" style="display:none;">
            </div>
            <div class="form-holder">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input asp-for="Input.Email" class="form-control" placeholder="e-mail" autocomplete="on" aria-required="true" />
            </div>
            <div class="form-holder">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <input asp-for="Input.Password" class="form-control" placeholder="password" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="form-holder">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="repeat password" autocomplete="new-password" aria-required="true" />
            </div>
            <div style="display:flex; flex-direction: row; margin-left: 1.5em; margin-bottom: 0.8em">
                <label class="container">
                    <input type="radio" checked name="radio">
                    <span class="checkmark"></span>
                    User
                </label>
                <label class="container">
                    <input type="radio" name="radio">
                    <span class="checkmark"></span>
                    Studio creator
                </label>
            </div>
            <div class="form-login" style="margin-bottom: 2.5em;">
                <button id="registerSubmit" class="button" type="submit"><b>Sign up</b></button>
                <p style="font-size:12px">Already have account? <br /><a asp-page="./Login">Login</a></p>
            </div>
        </form>
    </div>
</div>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/main.js"></script>

<style>
    input[type="file"]::file-selector-button {
        width: 142px;
        color: transparent;
        border-radius: 4px;
        margin-right: 1px;
    }

    input[type="file"]::before {
        position: absolute;
        padding-left: 0em;
        pointer-events: none;
        content: "Upload profile pic: ";
    }

    input[type="file"]::file-selector-button {
        border-radius: 4px;
        cursor: pointer;
        background-color: #f7f7f7;
    }

    input[type=radio] {
        accent-color: #808080;
    }
</style>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/waypoints/waypoints.min.js"></script>
<script src="lib/counterup/counterup.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>
<script src="lib/tempusdominus/js/moment.min.js"></script>
<script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
<script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<!-- Contact Javascript File -->
<script src="mail/jqBootstrapValidation.min.js"></script>
<script src="mail/contact.js"></script>

<!-- Template Javascript -->
<script src="js/mains.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}